---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
// import "../../themes/themes/enhanced/notion-darker-enhanced.css"
type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
			.last-updated-on {
				font-style: italic;
			}
		</style>
	</head>

	<body>
		<Header />
		<main style={{ backgroundImage: `url(${heroImage})` }}>
			<div>
				<div class="h-64 relative">
					<div
						class="w-full absolute bottom-0 text-white text-center liner-gradient"
					>
						<h1 class="title text-white">{title}</h1>
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="last-updated-on">
									Last updated on{" "}
									<FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
				</div>
			</div>
			<article class="prose md:prose-lg lg:prose-xl max-w-none responsive-article">
				<slot />
			</article>
		</main>
		<Footer />
		<style></style>
		<style>
			.liner-gradient {
				padding-top: 60px;
				padding-bottom: 30px;
				background: linear-gradient(
					180deg,
					rgba(204, 204, 204, 0) 0%,
					rgba(204, 204, 204, 0.1) 20%,
					rgba(204, 204, 204, 0.2) 40%,
					rgba(204, 204, 204, 0.3) 60%,
					rgba(204, 204, 204, 0.3) 90%,
					rgba(204, 204, 204, 0.3) 100%
				);
			}
			main {
				background-color: bisque;
				background-attachment: fixed;
			}
			article {
				margin: auto;
				min-height: 800px;
				position: relative;
				box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);

				margin-top: -20px;
				margin-bottom: -20px;
				z-index: 2;
				padding: 30px;
				border-radius: 4px;
				background: #fff;
			}
			@media (max-width: 620px) {
				article {
					width: calc(100vw - 20px);
				}
			}
		</style>
	</body>
</html>
